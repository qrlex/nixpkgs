+configureProg :: Verbosity -> ProgramDb -> Program
+                 -> IO (FilePath, [String])
+configureProg verbosity programDb prog = do
+    (p, _) <- requireProgram verbosity prog programDb
+    let pInv = programInvocation p []
+    return (progInvokePath pInv, progInvokeArgs pInv)
