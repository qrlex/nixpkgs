+module Distribution.Simple.Setup.Copy (
+
+  CopyFlags(..),     emptyCopyFlags,     defaultCopyFlags,     copyCommand,
+  ) where
+
+import Prelude ()
+import Distribution.Compat.Prelude hiding (get)
+
+import Distribution.ReadE
